<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for night mode -->
    <style name="Theme.GuardianCare" parent="android:Theme.Material.NoActionBar">
        <!-- System bar colors -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        
        <!-- Dark bars (light icons) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- Force apply dark mode to prevent system UI from using light mode incorrectly -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        
        <!-- Use a system edge-to-edge layout -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>
</resources>